@model IEnumerable<Employee_Records.Controllers.DepartmentListViewModel>
@{
    ViewData["Title"] = "Manage Departments";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Departments</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Department
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No departments found</h5>
            <p class="mb-0">Create your first department to organize your employees.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">All Departments (@Model.Count())</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th class="text-center">Employees</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@dept.Name</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(dept.Description))
                                    {
                                        <span class="text-muted">@dept.Description</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No description</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">@dept.EmployeeCount</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-sm btn-outline-info">Details</a>
                                    <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
