@model List<Employee_Records.Models.PayslipRequest>
@using Employee_Records.Models
@{
    ViewData["Title"] = "Payslip Requests";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2">Payslip Requests</h1>
            <p class="text-muted mb-0">Review and approve employee payslip requests</p>
        </div>
        <div>
            <a asp-action="GenerateDirectPayslip" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> Generate Direct Payslip
            </a>
            <a asp-action="ManagePayslips" class="btn btn-primary me-2">
                <i class="bi bi-list"></i> All Payslips
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-4" id="requestTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
                Pending
                @{
                    var pendingCount = Model.Count(r => r.Status == PayslipRequestStatus.Pending);
                }
                @if (pendingCount > 0)
                {
                    <span class="badge bg-warning text-dark">@pendingCount</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">
                Approved
                <span class="badge bg-success">@Model.Count(r => r.Status == PayslipRequestStatus.Approved)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">
                Rejected
                <span class="badge bg-danger">@Model.Count(r => r.Status == PayslipRequestStatus.Rejected)</span>
            </button>
        </li>
    </ul>

    <div class="tab-content" id="requestTabsContent">
        <!-- Pending Requests -->
        <div class="tab-pane fade show active" id="pending" role="tabpanel">
            @{
                var pendingRequests = Model.Where(r => r.Status == PayslipRequestStatus.Pending).ToList();
            }
            @if (pendingRequests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-warning">
                            <tr>
                                <th>Employee</th>
                                <th>Department</th>
                                <th>Pay Period</th>
                                <th>Salary</th>
                                <th>Request Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in pendingRequests)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@request.Employee?.Name</strong>
                                            @if (!string.IsNullOrEmpty(request.Employee?.EmployeeCode))
                                            {
                                                <br><small class="badge bg-primary">@request.Employee.EmployeeCode</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (request.Employee?.Department != null)
                                        {
                                            <span class="badge bg-secondary">@request.Employee.Department.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td><span class="badge bg-info">@request.PayPeriodDisplay</span></td>
                                    <td class="text-success fw-bold">â‚±@request.Employee?.Salary.ToString("N2")</td>
                                    <td>@request.RequestDate.ToString("MMM dd, yyyy h:mm tt")</td>
                                    <td>
                                        <a asp-action="GeneratePayslip" asp-route-requestId="@request.Id" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-circle"></i> Generate & Approve
                                        </a>
                                        <a asp-action="RejectRequest" asp-route-requestId="@request.Id" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No pending requests</h5>
                    <p class="text-muted">All payslip requests have been processed.</p>
                </div>
            }
        </div>

        <!-- Approved Requests -->
        <div class="tab-pane fade" id="approved" role="tabpanel">
            @{
                var approvedRequests = Model.Where(r => r.Status == PayslipRequestStatus.Approved).ToList();
            }
            @if (approvedRequests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-success">
                            <tr>
                                <th>Employee</th>
                                <th>Pay Period</th>
                                <th>Request Date</th>
                                <th>Processed By</th>
                                <th>Processed Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in approvedRequests)
                            {
                                <tr>
                                    <td><strong>@request.Employee?.Name</strong></td>
                                    <td><span class="badge bg-info">@request.PayPeriodDisplay</span></td>
                                    <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                                    <td>@request.ProcessedBy</td>
                                    <td>@request.ProcessedDate?.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (request.GeneratedPayslipId.HasValue)
                                        {
                                            <a asp-action="ViewPayslip" asp-route-id="@request.GeneratedPayslipId" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i> View Payslip
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No approved requests yet</h5>
                </div>
            }
        </div>

        <!-- Rejected Requests -->
        <div class="tab-pane fade" id="rejected" role="tabpanel">
            @{
                var rejectedRequests = Model.Where(r => r.Status == PayslipRequestStatus.Rejected).ToList();
            }
            @if (rejectedRequests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-danger">
                            <tr>
                                <th>Employee</th>
                                <th>Pay Period</th>
                                <th>Request Date</th>
                                <th>Rejected By</th>
                                <th>Reason</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in rejectedRequests)
                            {
                                <tr>
                                    <td><strong>@request.Employee?.Name</strong></td>
                                    <td><span class="badge bg-info">@request.PayPeriodDisplay</span></td>
                                    <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                                    <td>@request.ProcessedBy</td>
                                    <td>@(request.RejectionReason ?? "No reason provided")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-x-circle display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No rejected requests</h5>
                </div>
            }
        </div>
    </div>
</div>

