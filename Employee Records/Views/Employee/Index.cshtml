@model IEnumerable<EmployeeModel.Employee>

<h2>Employees</h2>
<p>
    <a class="btn btn-primary" href="/Employee/Create">Add Employee</a>
</p>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Position</th>
            <th>Department</th>
            <th>Salary</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model) {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(e.EmployeeCode))
                    {
                        <span class="badge bg-primary">@e.EmployeeCode</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>@e.Name</td>
                <td>@e.Email</td>
                <td>@e.Position</td>
                <td>
                    @if (e.Department != null)
                    {
                        <span class="badge bg-secondary">@e.Department.Name</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>@e.Salary.ToString("N2")</td>
                <td>
                    @if (!string.IsNullOrEmpty(e.Address))
                    {
                        <span title="@e.Address">
                            @(e.Address.Length > 30 ? e.Address.Substring(0, 30) + "..." : e.Address)
                        </span>
                        @if (e.Latitude.HasValue && e.Longitude.HasValue)
                        {
                            <span class="badge bg-success ms-1" title="Location available">üìç</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    <a href="/Employee/Edit/@e.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a href="/Employee/Details/@e.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a href="/Employee/Delete/@e.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
