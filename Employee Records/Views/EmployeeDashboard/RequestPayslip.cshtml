@model Employee_Records.Controllers.RequestPayslipViewModel
@{
    ViewData["Title"] = "Request Payslip";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-receipt"></i> Request Payslip</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Select the pay period you want to request a payslip for. Once submitted, an administrator will review and approve your request.
                    </p>

                    <form asp-action="RequestPayslip" method="post">
                        <input type="hidden" asp-for="EmployeeId" />
                        
                        <div class="mb-3">
                            <label class="form-label">Pay Period Year</label>
                            <select asp-for="PayPeriodYear" class="form-select">
                                @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 2; year--)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Pay Period Month</label>
                            <select asp-for="PayPeriodMonth" class="form-select">
                                @{
                                    var months = new[] { "January", "February", "March", "April", "May", "June", 
                                                        "July", "August", "September", "October", "November", "December" };
                                    for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i">@months[i-1]</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Pay Period Half</label>
                            <select asp-for="PayPeriodHalf" class="form-select">
                                <option value="1">1st Half (1st - 15th)</option>
                                <option value="2">2nd Half (16th - End of Month)</option>
                            </select>
                            <small class="text-muted">
                                Select which half of the month you want the payslip for.
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> Your request will be reviewed by an administrator. 
                            You will be notified once your payslip is ready.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success flex-grow-1">
                                <i class="bi bi-send"></i> Submit Request
                            </button>
                            <a asp-action="Payslips" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

