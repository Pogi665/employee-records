@model Employee_Records.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Admin Dashboard</h1>
        <div>
            @if (Model.PendingPayslipRequests > 0)
            {
                <a asp-controller="Admin" asp-action="PayslipRequests" class="btn btn-warning me-2">
                    <i class="bi bi-receipt"></i> Payslip Requests
                    <span class="badge bg-danger">@Model.PendingPayslipRequests</span>
                </a>
            }
            <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-people"></i> Manage Employees
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 opacity-75">Total Employees</h6>
                            <h2 class="mb-0">@Model.TotalEmployees</h2>
                        </div>
                        <div class="fs-1 opacity-50">üë•</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 opacity-75">Total Payroll</h6>
                            <h2 class="mb-0">‚Ç±@Model.TotalSalary.ToString("N2")</h2>
                        </div>
                        <div class="fs-1 opacity-50">üí∞</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 opacity-75">Avg. Salary</h6>
                            <h2 class="mb-0">‚Ç±@Model.AverageSalary.ToString("N2")</h2>
                        </div>
                        <div class="fs-1 opacity-50">üìä</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">With Location</h6>
                            <h2 class="mb-0">@Model.EmployeesWithLocation</h2>
                        </div>
                        <div class="fs-1 opacity-50">üìç</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Salary Range -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0">üíµ Salary Range</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p class="text-muted mb-1">Highest Salary</p>
                            <h4 class="text-success">‚Ç±@Model.HighestSalary.ToString("N2")</h4>
                        </div>
                        <div class="col-6">
                            <p class="text-muted mb-1">Lowest Salary</p>
                            <h4 class="text-danger">‚Ç±@Model.LowestSalary.ToString("N2")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üè¢ Departments</h5>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-sm btn-outline-primary">Manage</a>
                </div>
                <div class="card-body">
                    @if (Model.DepartmentCounts.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var dept in Model.DepartmentCounts)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @if (dept.DepartmentName == "Unassigned")
                                    {
                                        <span class="text-muted fst-italic">@dept.DepartmentName</span>
                                    }
                                    else
                                    {
                                        @dept.DepartmentName
                                    }
                                    <span class="badge bg-primary rounded-pill">@dept.Count</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No departments available.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Payslip Management Card -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-success">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üí∞ Payslip Management</h5>
                    <div>
                        <a asp-action="ManagePayslips" class="btn btn-light btn-sm me-2">
                            <i class="bi bi-list"></i> All Payslips
                        </a>
                        <a asp-action="GenerateDirectPayslip" class="btn btn-light btn-sm">
                            <i class="bi bi-plus-circle"></i> Generate Payslip
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-warning bg-opacity-25 rounded p-3 me-3">
                                    <i class="bi bi-hourglass-split fs-3 text-warning"></i>
                                </div>
                                <div>
                                    <h3 class="mb-0">@Model.PendingPayslipRequests</h3>
                                    <small class="text-muted">Pending Requests</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            @if (Model.PendingPayslipRequests > 0)
                            {
                                <div class="alert alert-warning mb-0 d-flex align-items-center">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <span>You have <strong>@Model.PendingPayslipRequests</strong> payslip request(s) waiting for approval.</span>
                                    <a asp-action="PayslipRequests" class="btn btn-warning btn-sm ms-auto">Review Now</a>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success mb-0">
                                    <i class="bi bi-check-circle me-2"></i>
                                    All payslip requests have been processed. No pending requests.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Employees -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">üë§ Recent Employees</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentEmployees.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Employee ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Position</th>
                                        <th>Salary</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var emp in Model.RecentEmployees)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(emp.EmployeeCode))
                                                {
                                                    <span class="badge bg-primary">@emp.EmployeeCode</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@emp.Name</td>
                                            <td>@emp.Email</td>
                                            <td>@emp.Position</td>
                                            <td>‚Ç±@emp.Salary.ToString("N2")</td>
                                            <td>
                                                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                                <a asp-controller="Employee" asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-info">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <p class="mb-0">No employees yet. Go to <a asp-controller="Employee" asp-action="Index">Employees</a> to add your first employee.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

