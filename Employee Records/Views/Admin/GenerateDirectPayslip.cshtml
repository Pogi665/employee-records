@model Employee_Records.Controllers.GenerateDirectPayslipViewModel
@{
    ViewData["Title"] = "Generate Direct Payslip";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Generate Direct Payslip</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Generate a payslip directly for an employee without requiring them to submit a request.
                        The payslip will be automatically approved and visible to the employee.
                    </p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="GenerateDirectPayslip" method="post">
                        <div class="mb-3">
                            <label class="form-label">Select Employee</label>
                            <select asp-for="SelectedEmployeeId" class="form-select" required>
                                <option value="">-- Select an Employee --</option>
                                @foreach (var employee in Model.Employees)
                                {
                                    <option value="@employee.Id" 
                                            data-salary="@employee.Salary.ToString("N2")"
                                            selected="@(Model.SelectedEmployeeId == employee.Id)">
                                        @employee.Name 
                                        @if (!string.IsNullOrEmpty(employee.EmployeeCode))
                                        {
                                            <text>(@employee.EmployeeCode)</text>
                                        }
                                        - @employee.Position
                                        @if (employee.Department != null)
                                        {
                                            <text>| @employee.Department.Name</text>
                                        }
                                    </option>
                                }
                            </select>
                        </div>

                        <div id="employeeDetails" class="alert alert-info mb-3" style="display: none;">
                            <strong>Monthly Salary:</strong> <span id="salaryDisplay">₱0.00</span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Pay Period Year</label>
                                    <select asp-for="PayPeriodYear" class="form-select">
                                        @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 2; year--)
                                        {
                                            <option value="@year">@year</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Pay Period Month</label>
                                    <select asp-for="PayPeriodMonth" class="form-select">
                                        @{
                                            var months = new[] { "January", "February", "March", "April", "May", "June", 
                                                                "July", "August", "September", "October", "November", "December" };
                                            for (int i = 1; i <= 12; i++)
                                            {
                                                <option value="@i">@months[i-1]</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Pay Period Half</label>
                                    <select asp-for="PayPeriodHalf" class="form-select">
                                        <option value="1">1st Half (1st - 15th)</option>
                                        <option value="2">2nd Half (16th - End)</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-secondary">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> The payslip will be generated with:
                            <ul class="mb-0 mt-2">
                                <li>Automatic calculation of SSS, PhilHealth, Pag-IBIG, and Withholding Tax</li>
                                <li>Random realistic values for days worked, overtime, and holiday pay</li>
                                <li>Status will be set to <span class="badge bg-success">Approved</span> immediately</li>
                            </ul>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg flex-grow-1">
                                <i class="bi bi-check-circle"></i> Generate & Approve Payslip
                            </button>
                            <a asp-action="ManagePayslips" class="btn btn-outline-secondary btn-lg">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('SelectedEmployeeId').addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            var salary = selectedOption.getAttribute('data-salary');
            var detailsDiv = document.getElementById('employeeDetails');
            var salarySpan = document.getElementById('salaryDisplay');
            
            if (salary && this.value) {
                salarySpan.textContent = '₱' + salary;
                detailsDiv.style.display = 'block';
            } else {
                detailsDiv.style.display = 'none';
            }
        });

        // Trigger change event on page load if an employee is pre-selected
        var employeeSelect = document.getElementById('SelectedEmployeeId');
        if (employeeSelect.value) {
            employeeSelect.dispatchEvent(new Event('change'));
        }
    </script>
}

