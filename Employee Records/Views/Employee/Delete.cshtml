@model EmployeeModel.Employee

<h2>Delete Employee</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this employee?
</div>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Email:</strong> @Model.Email</li>
    <li><strong>Position:</strong> @Model.Position</li>
    <li><strong>Salary:</strong> @Model.Salary.ToString("N2")</li>
</ul>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Employee/Index" class="btn btn-secondary">Cancel</a>
</form>
